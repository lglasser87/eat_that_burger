<h1>Eat Da Burger!</h1>

<ul>
  {{#each burgers}}
    {{> burger}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="burgType">Type of Burger:</label>
    <input type="text" id="burgType" name="name">
  </div>

  <button type="submit">Add Burger</button>
</form>